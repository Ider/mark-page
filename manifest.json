{
  "name": "Mark Page",
  "description": "Mark page as read",
  "version": "0.2",
  "icons":  {
              "16": "icon16.png",
              "48": "icon48.png",
              "128": "icon128.png"
            },
  "background": {
    "scripts": ["init.js", "storage_manager.js", "background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "mark.png",           // optional
    "default_title": "Mark Page as Read"      // optional; shown in tooltip
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["init.js", "content.js"],
        "css": ["content.css"]
    }
  ] ,
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ]
}
